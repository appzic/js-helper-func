{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": false,
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
